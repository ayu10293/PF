<% if recipe.favorite_by?(current_customer) %>
  <%= link_to recipe_favorites_path(recipe), method: :delete do %>
    <i class="fa-solid fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to recipe_favorites_path(recipe), method: :post do %>
    <i class="fa-regular fa-heart"></i>
  <% end %>
<% end %>