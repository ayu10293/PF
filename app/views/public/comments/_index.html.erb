<table>
  <tbody>
    <% recipe.comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to customer_path(comment.customer) do %>
          <%#= image_tag comment.customer.get_profile_image, size: "50x50" %><br>
          <%= comment.customer.name %>
        <% end %>
      </td>
      <td><%= comment.comment %></td>
      <td>
        <% if comment.customer == current_customer %>
          <%= link_to "Destroy", recipe_comment_path(recipe, comment), method: :delete, class: "btn btn-sm btn-danger float-end" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>